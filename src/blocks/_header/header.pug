header.header(class=headerClass)
    .header__desktop.container
        .row.header__row
            .col.header__col
                .header__line
                    ul.contacts.contacts_inline.header__contacts-list
                        li.contacts__item.contacts__item_phone.contacts_inline__item
                            a(href=telMain.link)=telMain.item
                        li.contacts__item.contacts__item_phone.contacts_inline__item
                            a(href=telAd.link)=telAd.item
                .header__line
                    nav.navbar.navbar_left
                        a.navbar__link.navbar__link_label(href="/online.html") 
                            span.label.label_action Online-курсы
                        a.navbar__link(href="/index.html") Очные курсы
                        .navbar__link.navbar__link_has-child(data-nav="#navbarAbout") О школе
                            .navbar__children#navbarAbout
                                a.navbar__children-link(href="#") Блог школы
                                a.navbar__children-link(href="#") Что такое «Маджента»?
                                a.navbar__children-link(href="#") Вопрос-ответ
                        a.navbar__link(href="/sertificate.html") Сертификаты
            a.header__logo(href="/")
            .col.header__col
                .header__line.header__line_additional.justify-content-end
                    a.header__link.text-small.text-grey(href="#") Оплата и доставка
                    a.header__link.label.text-bold(href="/timetable.html") Расписание
                    .contacts.contacts_inline.header__contacts-list
                        a.contacts__item.contacts__item_networks.contacts__item_vk.contacts_inline__item(href="https://vk.com/magentaflower")
                        a.contacts__item.contacts__item_networks.contacts__item_fb.contacts_inline__item(href="https://vk.com/magentaflower")
                        a.contacts__item.contacts__item_networks.contacts__item_inst.contacts_inline__item(href="https://vk.com/magentaflower")
                .header__line.justify-content-end
                    nav.navbar.navbar_right
                        a.navbar__link(href="#") Отзывы
                        a.navbar__link(href="#") Преподаватели
                        a.navbar__link(href="#") Портфолио
                        a.navbar__link(href="/contact.html") Контакты
    .header__mobile
        a.header__logo.header__logo_mobile(href="/")
        svg.header__mobile-menu.nav-btn#nav(viewBox="0 0 24.00 24.00" xml:space="preserve")
            path(fill="#000000" fill-opacity="1" stroke-width="0.2" stroke-linejoin="round" d="M 3,8L 3,7L 20,7L 20,8L 3,8 Z M 20,12L 20,13L 3,13L 3,12L 20,12 Z M 3,17L 20,17L 20,18L 3,18L 3,17 Z")